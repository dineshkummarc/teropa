<project name="ko2010" default="gwtcompile">
	
	<property name="target.dir" value="../public"/>
	<property name="module.name" value="teropa.ko2010.Client"/>
	
	<path id="cp">
		<fileset dir="war/WEB-INF/lib" includes="**/**"/>
		<fileset dir="build-lib" includes="**/**"/>
		<pathelement path="src"/>
	</path>
		
	<target name="gwtcompile">
		<java failonerror="true" classname="com.google.gwt.dev.Compiler" fork="true">
			<arg value="-war"/>
			<arg value="${target.dir}"/>
			<arg value="-style"/>
			<arg value="obf"/>
			<arg value="-XdisableCastChecking"/>
			<arg value="${module.name}"/>
			<jvmarg value="-Xmx1024m" />
			<classpath refid="cp"/>
		</java>
		<echo message="Everything here is generated by the GWT compiler" file="${target.dir}/client/README.md"/>
	</target>

</project>